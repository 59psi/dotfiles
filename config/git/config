# vim:set ft=gitconfig:

[alias]
	ap = add --patch
	au = add --update
	br = branch
	bv = branch --verbose --verbose
	ca = commit --amend
	ci = commit
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	dh = diff HEAD
	di = diff
	du = diff @{u}
	ff = merge --ff-only
	fx = commit --fixup
	lg = log --graph --decorate --oneline
	ls = ls-files -oc --exclude-standard
	st = status --short --branch -uno
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rbs = rebase --skip
	thx = shortlog -ns
[branch]
	autoSetupMerge = always
	autoSetupRebase = always
[color]
	ui = auto
[color "grep"]
	filename = magenta
	linenumber = green
	match = bold red
	separator = cyan
[commit]
	verbose = true
[core]
	editor = vim
	pager = less -S ; truncates long lines
[credential]
	helper = osxkeychain
[diff]
	renames = copies
	tool = vimdiff
	algorithm = patience
	indentHeuristic = true
[diff "gpg"]
	textconv = gpg2 -qd --no-tty
[diff "keyring"]
	textconv = gpg2 -v
	xfuncname = "^((pub|uid) .*)"
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[diff "tar"]
	textconv = tar -tvf
[difftool]
	prompt = false
[fetch]
	prune = true
[grep]
	extendedRegexp = true
	lineNumber = true
[help]
	format = web
[init]
	; templatedir = ~/.config/git/template
[instaweb]
	httpd = webrick
	local = true
	port = 8080
[interactive]
	singleKey = true
	diffFilter = diff-highlight
[log]
	decorate = short
[merge]
	conflictStyle = diff3
[merge "bundle"]
	name = bundle
	driver = bundle
[pager]
	; for log
	; +F - don't quit if one screen
	; +X - dont' clear the screen on exit
	log = diff-highlight | less -+FX -S
	show = diff-highlight | less -S
	diff = diff-highlight | less -S
[push]
	default = simple
[rebase]
	autoSquash = true
	autoStash = true
[rerere]
	enabled = true
	autoUpdate = true
[stash]
	showPatch = true
[submodule]
	fetchJobs = 0
[transfer]
	fsckObjects = true
[user]
	useConfigOnly = true
[web]
	browser = open
