[user]
    name = Jack Nagel
    email = jacknagel@gmail.com
    signingkey = 408CAC63
	
[core]
    # autocrlf = input
    # safecrlf = true
    editor = vim
    excludesfile = ~/.gitignore
	
[help]
    autocorrect = 1

[alias]
    co = checkout
    ci = commit
    br = branch
    st = status
    last = cat-file commit HEAD
    ls = ls-files
    type = cat-file -t
    dump = cat-file -p
    unstage = reset HEAD
    hist = log --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %s %Cgreen(%cr)%Creset %Cblue(%an)%Creset' --abbrev-commit
    logp = log -p
	lol = log --graph --decorate --oneline
	lola = log --graph --decorate --oneline --all
    
[color]
    ui = auto
    
[color "diff"]
    whitespace = yellow reverse
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[github]
    user = jacknagel
    token = !security 2>&1 >/dev/null find-generic-password -gs github.token | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'

[push]
    default = tracking
    
[url "git@github.com:"]
    pushInsteadOf = github:
    pushInsteadOf = git://github.com/
    
[url "git://github.com/"]
    insteadOf = github:

[url "git@gist.github.com:"]
    pushInsteadOf = gist:
    pushInsteadOf = git://gist.github.com/
    
[url "git://gist.github.com/"]
    insteadof = gist:
