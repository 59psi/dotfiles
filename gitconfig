# ~/.gitconfig: git(1) configuration

[user]
	name = Jack Nagel
	email = jacknagel@gmail.com

[include]
	path = .gitcreds

[core]
	editor = vim
	pager = less -+$LESS -iRSwq
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[color]
	ui = auto

[diff]
	renames = copies

[push]
	default = upstream

[merge]
	conflictstyle = diff3

[rerere]
	enabled = true

[help]
	format = web

[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = jacknagel@gmail.com

[alias]
	ap = add --patch
	au = add --update
	br = branch
	bv = branch --verbose --verbose
	ca = commit --amend
	cb = checkout -b
	cf = cat-file
	ci = commit
	co = checkout
	cp = cherry-pick
	cs = commit --signoff
	cv = commit --verbose
	cw = commit -am "wip"
	dc = diff --cached
	dh = diff HEAD
	di = diff
	ff = merge --ff-only
	fp = format-patch
	fx = commit --fixup
	lg = log --graph --decorate --oneline
	lp = log --patch
	ls = ls-files --cached --abbrev
	rh = reset HEAD
	rl = reflog
	rp = reset --patch
	sa = status --short --branch
	sb = show-branch
	se = send-email
	sq = commit --squash
	st = status --short --branch -uno
	rbc	= rebase --continue
	top	= shortlog -ns
	egrep	= grep -E
	fgrep	= grep -F

[log]
	decorate = short

[diff "gpg"]
	textconv = gpg2 -qd --no-tty

[diff "odf"]
	textconv = odt2txt

[diff "tar"]
	textconv = tar -tvf

[diff "word"]
	textconv = strings

[gist]
	browse = 1

[github]
	user = jacknagel
	password = !security 2>&1 > /dev/null find-generic-password -gs github.password | perl -ne '/^password: \\\"(.*)\\\"$/ and print $1'
