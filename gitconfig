[user]
    name = Jack Nagel
    email = jacknagel@gmail.com
    signingkey = 408CAC63
	
[core]
    autocrlf = input
    safecrlf = true
    editor = vim
    excludesfile = ~/.gitignore
	
[help]
    autocorrect = 1

[alias]
    hist = log --pretty=format:'%Cred%h%Creset |%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset [%an]' --graph --abbrev-commit
    lg = log --pretty=format:'%Cred%h%Creset |%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset [%an]' --graph --abbrev-commit
    last = cat-file commit HEAD
    ls = ls-files
    type = cat-file -t
    dump = cat-file -p
    unstage = reset HEAD
    
[color]
    ui = auto

[github]
    user = jacknagel
    token = !security 2>&1 >/dev/null find-generic-password -gs github.token | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'

[push]
    default = tracking
    
[url "git@github.com:"]
    pushInsteadOf = github:
    pushInsteadOf = git://github.com/
    
[url "git://github.com/"]
    insteadOf = github:

[url "git@gist.github.com:"]
    pushInsteadOf = gist:
    pushInsteadOf = git://gist.github.com/
    
[url "git://gist.github.com/"]
    insteadof = gist:
