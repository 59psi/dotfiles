[user]
    name = Jack Nagel
    email = jacknagel@gmail.com
    signingkey = 408CAC63

[core]
    # autocrlf = input
    # safecrlf = true
    editor = em
    excludesfile = ~/.gitignore

[help]
    autocorrect = 1

[alias]
    br = branch
    ci = commit
    co = checkout
    dc = diff --cached
    ls = ls-files -s --abbrev
    sb = show-branch
    ss = status --short
    st = status -sb
    amend   = commit --amend
    cur     = !git rev-parse HEAD | cut -c 1-7 | pbcopy
    hist    = log --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %s %Cgreen(%cr)%Creset %Cblue(%an)%Creset' --abbrev-commit
    last    = cat-file commit HEAD
    logp    = log -p
    lol     = log --graph --decorate --oneline
    lola    = log --graph --decorate --oneline --all
    lols    = log --graph --decorate --oneline --simplify-by-decoration --branches --remotes
    unstage = reset HEAD
    top     = rev-parse HEAD
    wip     = commit -am 'wip'

[color]
    ui = auto
    diff = auto

