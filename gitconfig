# ~/.gitconfig: git(1) configuration

[user]
	name = Jack Nagel
	email = jacknagel@gmail.com

[core]
	editor = vim
	pager = less -+$LESS -iRSwq
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[color]
	ui = auto

[diff]
	mnemonicprefix = true
	renames = copies

[push]
	default = upstream

[merge]
	conflictstyle = diff3

[rerere]
	enabled = 1

[help]
	format = web

[sendemail]
	identity = gmail

[sendemail "gmail"]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = jacknagel@gmail.com

[sendemail "jfour"]
	from = jacknagel@jfour.org
	envelopesender = jacknagel@jfour.org

[alias]
	ap = add --patch
	au = add --update
	br = branch
	bv = branch --verbose --verbose
	ca = commit --amend
	cb = checkout -b
	cf = cat-file
	ci = commit
	co = checkout
	cp = cherry-pick
	cs = commit --signoff
	cv = commit --verbose
	cw = commit -am "work-in-progress"
	dc = diff --cached
	di = diff
	ff = merge --ff-only
	fp = format-patch
	fx = commit --fixup
	lg = log --graph --decorate --oneline
	lp = log --patch
	ls = ls-files --cached --abbrev
	rh = reset HEAD
	rl = reflog
	rp = reset --patch HEAD
	sa = status --short --branch
	sb = show-branch
	se = send-email
	sq = commit --squash
	st = status --short --branch -uno
	amend	= commit --amend
	head	= rev-parse HEAD
	last	= show HEAD
	lgn	= log --notes
	logg	= log --walk-reflogs
	logp	= log --patch
	lol	= log --graph --decorate --oneline
	lola	= log --graph --decorate --oneline --all
	lols	= log --graph --decorate --oneline --simplify-by-decoration --branches --remotes
	msg	= commit --allow-empty -m
	rbc	= rebase --continue
	top	= shortlog -ns # !git log --format=%aN | sort | uniq -c | sort -r | less

[diff "gpg"]
	textconv = gpg2 -qd --no-tty

[diff "odf"]
	textconv = odt2txt

[diff "tar"]
	textconv = tar -tvf
	cachetextconv = true

[diff "word"]
	textconv = strings
	cachetextconv = true

[gist]
	browse = 1

[github]
	user = jacknagel
	token = !security 2>&1 > /dev/null find-generic-password -gs github.token | perl -ne '/^password: \\\"(.*)\\\"$/ and print $1'
