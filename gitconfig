# ~/.gitconfig: git(1) configuration

[user]
	name = Jack Nagel
	email = jacknagel@gmail.com

[core]
	editor = vim
	pager = less -+$LESS -iRSwq
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[color]
	ui = auto

[help]
	format = web

[sendemail]
	identity = gmail

[sendemail "gmail"]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = jacknagel@gmail.com

[sendemail "jfour"]
	from = jacknagel@jfour.org
	envelopesender = jacknagel@jfour.org

[alias]
	ap = add --patch
	au = add --update
	br = branch
	bv = branch --verbose --verbose
	ca = commit --amend
	cf = cat-file
	ci = commit
	co = checkout
	cp = cherry-pick
	cs = commit --signoff
	cv = commit --verbose
	cw = commit -am "Work-in-progress"
	dc = diff --cached
	di = diff
	ff = merge --ff-only
	fp = format-patch
	fx = commit --fixup
	lg = log --graph --decorate --oneline
	lp = log --patch
	ls = ls-files --cached --abbrev
	pr = !sh -c 'git-pr $1' -
	rh = reset HEAD
	rl = reflog
	rp = reset --patch HEAD
	sb = show-branch
	se = send-email
	sq = commit --squash
	st = status --short --branch
	amend	= commit --amend
	cur	= !git rev-parse HEAD | cut -c 1-7 | pbcopy
	head	= rev-parse HEAD
	last	= cat-file commit HEAD
	logg	= log --walk-reflogs
	logp	= log --patch
	lol	= log --graph --decorate --oneline
	lola	= log --graph --decorate --oneline --all
	lols	= log --graph --decorate --oneline --simplify-by-decoration --branches --remotes
	msg	= commit --allow-empty -m
	prm	= !sh -c 'git-prm' 
	top	= shortlog -ns # !git log --format=%aN | sort | uniq -c | sort -r | less

[diff "tar"]
	textconv = tar -tvf

[diff "tgz"]
	textconv = tar -ztvf

[diff "tbz"]
	textconv = tar -jtvf

[push]
	default = upstream

[merge]
	conflictstyle = diff3

[rerere]
	enabled = 1

[github]
	user = jacknagel
	token = !security 2>&1 > /dev/null find-generic-password -gs github.token | perl -ne '/^password: \\\"(.*)\\\"$/ and print $1'

[gist]
	browse = 1
