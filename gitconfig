[user]
    name = Jack Nagel
    email = jacknagel@gmail.com

[core]
    editor = em
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    pager = less -+$LESS -iRSw

[help]
    autocorrect = 1

[alias]
    au = add --update
    br = branch
    bv = branch --verbose
    ci = commit
    co = checkout
    cv = commit --verbose
    cs = commit --signoff
    dc = diff --cached
    di = diff
    ff = merge --ff-only
    fp = format-patch
    lg = log --graph --decorate --oneline
    lp = log --patch
    ls = ls-files --stage --abbrev
    sb = show-branch
    so = commit --signoff
    ss = status --short
    st = status --short --branch
    amend   = commit --amend
    cur     = !git rev-parse HEAD | cut -c 1-7 | pbcopy
    hist    = log --graph --pretty=hist --abbrev-commit
    last    = cat-file commit HEAD
    logp    = log --patch
    lol     = log --graph --decorate --oneline
    lola    = log --graph --decorate --oneline --all
    lols    = log --graph --decorate --oneline --simplify-by-decoration --branches --remotes
    msg     = commit --allow-empty -m
    unstage = reset HEAD
    top     = rev-parse HEAD
    wip     = commit -am 'wip'

[color]
    ui = auto

[pretty]
    hist = "%C(yellow)%h%Creset%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset"

[diff "tar"]
    textconv = tar -tvf

[diff "tgz"]
    textconv = tar -ztvf

[diff "tbz"]
    textconv = tar -jtvf

[push]
    default = tracking

[github]
    user = jacknagel
    token = !security 2>&1 >/dev/null find-generic-password -gs github.token | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'

[gist]
    browse = 1

[url "git@github.com:"]
    pushInsteadOf = github:
    pushInsteadOf = git://github.com/

[url "git://github.com/"]
    insteadOf = github:

[url "git@gist.github.com:"]
    pushInsteadOf = gist:
    pushInsteadOf = git://gist.github.com/

[url "git://gist.github.com/"]
    insteadof = gist:
