#!/bin/sh
git rev-list --objects --all |
git cat-file --batch-check="%(objectsize:disk) %(objecttype) %(rest)" |
ruby -ane '
  BEGIN {
    paths = Hash.new(0)
  }

  size, type, path = $F

  case type
  when "blob"
    paths[path] += size.to_i
  end

  END {
    puts paths.
      sort_by { |p, s| s }.
      map { |p, s| "%5.1fK %s" % [s.to_f / 1024, p] }
  }
'
